<h4 class=""></h4>
<div class="cards">
  <div class="card">
    <div class="row">
      <div class="col-sm-3">
        <img src="<%=@user.avatar%>" alt="">
      </div>
      <div class="col-sm-9">
        <div class="card-header">
          Info:
        </div>
        <div class="card-copy">
          <p>
            Name: <span class="text-info text-capitalize"><%= @user.first %> <%= @user.last %></span>
          </p>
          <p>
            Email: <span class="text-info text-capitalize"><%= @user.email %> </span>
          </p>
          <p>
            Age: <span class="text-info text-capitalize"><%= @user.email %> </span>
          </p>
        </div>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
      Summary:
    </div>
    <div class="card-copy">
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Fuga, officiis sunt neque facilis culpa molestiae necessitatibus delectus veniam provident.</p>
    </div>
  </div>
</div>
<hr>
<h2>Skills</h2>
<hr>
<div class="cards">
  <% @user.skills.each do |skill| %>
    <div class="col-sm-4">
      <div class="card">
        <div class="card-header">
          Type: <span class="text-info text-capitalize"><%= skill.name %></span>
        </div>
        <div class="card-copy">
          <p>
            Proficiency: <span class="text-info text-capitalize"><%= skill.proficiency %></span>
          </p>
        </div>
      </div>
    </div>
  <% end -%>
</div>
